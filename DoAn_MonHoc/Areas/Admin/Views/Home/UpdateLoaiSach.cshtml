@{
    ViewBag.Title = "UpdateLoaiSach";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
@model  DoAn_MonHoc.Models.LOAISACH
<h2 style="text-align: center;
    text-transform:uppercase;color: brown;">
    Cập nhật thể loại
</h2>
@using (Html.BeginForm("UpdateLoaiSach", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="color: brown;">
        <hr />
        @if (ViewBag.Success != null)
        {
            <div id="thongBaoThanhCong" class="alert alert-success">@ViewBag.Success</div>
        }
        @Html.HiddenFor(model => model.MaLoai)
        <div class="form-group">
            @Html.LabelFor(model => model.TenLoai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenLoai, new { @class = "form-control", placeHolder = "" })
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn" style="background-color:#007f85;color: white;" />
            </div>
        </div>
    </div>
}
<div style="text-transform: uppercase;
    font-weight: bold;">
    <a href="/Admin/Home/AD_ShowAllLoaiSach" style="color:#007f85;font-size:15px">Trở về</a>
  
</div>
