@{
    ViewBag.Title = "FeedBack_KH";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
@model IEnumerable<DoAn_MonHoc.Models.LIENHE>
<h2 style="text-align: center;
    text-transform: uppercase;color: brown;">
    Phản hồi từ khách hàng
</h2>
<table class="table" id="example" style="width:100%;color: brown;">
    <thead>
        <tr>
            <th style="color: brown">
                Họ
            </th>
            <th style="color: brown">
                Tên
            </th>
            <th style="color: brown">
                Email
            </th>
            <th style="color: brown">
                Điện thoại
            </th>
            <th style="color: brown">
                Ngày cập nhật
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.MaLH">
                <td>
                    @Html.DisplayFor(modelItem => item.Ho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DienThoai)
                </td>
                <td>
                    @String.Format("{0:dd/MM/yyyy}", item.NgayCapNhat)
                </td>
                <td>
                    @Html.ActionLink("Xem", "FeedDetail_KH", new { id = item.MaLH }) |
                    @Ajax.ActionLink("Xóa", "DeleteFeedBack_KH", new { id = item.MaLH }, new AjaxOptions
               {
                   Confirm = "Bạn có muốn xóa phản hồi này không?",
                   OnComplete = "$('#row_" + @item.MaLH + "').remove()",
                   HttpMethod = "Delete"
               })
                </td>
            </tr>
        }
    </tbody>
</table>
