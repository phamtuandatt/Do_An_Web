@{
    ViewBag.Title = "AD_ShowAllLoaiSach";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
@model IEnumerable<DoAn_MonHoc.Models.LOAISACH>
<h2 style="text-align: center;
    text-transform: uppercase;
    color: brown;">
    Quản lý thể loại
</h2>
<p style=" text-transform: uppercase; ">
    <a href="/Admin/Home/InsertLoaiSach" style="color: brown;">Thêm thể loại</a>
</p>
<table class="table" id="example" style="width:100%;color: brown;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenLoai)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.MaLoai">
                <td>
                    @Html.DisplayFor(modelItem => item.MaLoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenLoai)
                </td>
                <td>
                    @Html.ActionLink("Xem", "UpdateLoaiSach", new { id = item.MaLoai }) |
                    @Ajax.ActionLink("Xóa", "DeleteLoaiSach", new { id = item.MaLoai }, new AjaxOptions
               {
                   Confirm = "Bạn có muốn xóa thể loại này không?",
                   OnComplete = "$('#row_" + @item.MaLoai + "').remove()",
                   HttpMethod = "Delete"
               })
                </td>
            </tr>
        }
    </tbody>

</table>
