@{
    ViewBag.Title = "DonHang_KH";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@model IEnumerable<DoAn_MonHoc.Models.PHIEUDATHANG>
<h2 style="width: 100%;    padding-left: 23px;    padding-top: 13px;">Đơn Hàng Của Bạn</h2>
@if (Model.Count() != 0)
{
    <table class="table" id="myTable" style="margin-left: 34px; margin-bottom: 62px; font-size: 15px;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MaPhieuDH)
                </th>
                <th>
                   Ngày Đặt
                </th>
                <th>
                  Trạng Thái
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Reverse())
            {
                <tr id="row_@item.MaPhieuDH">
                    <td>
                        @Html.DisplayFor(modelItem => item.MaPhieuDH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayDat)
                    </td>
                    <td>
                        @Html.ActionLink("Xem", "DetailsDonDatHang", "Cart", new { id = item.MaPhieuDH })
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div style="color:red;    margin-top: 10px;    width: 100%;    font-size: 15px;    margin-left: 30px;    margin-bottom: 30px;">Xin Lỗi Bạn Chưa Có Đơn Hàng Nào !</div>
}
