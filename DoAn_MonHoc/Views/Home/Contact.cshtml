@model DoAn_MonHoc.Models.LIENHE
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


@if (@ViewBag.Success != null)
{
    <div class="col-md-12" style="margin-top:10px">
        <div class="form-group">
            <div class="col-md-12 text-center">
                <label class="alert alert-success" style="color:red; font-size:20px; font-weight:bold;width:100%;text-align:center;text-transform:uppercase">@ViewBag.success</label>
            </div>
        </div>
    </div>
}
        <div class="col-md-12">
            <h3 style="text-align:center; text-transform:uppercase;margin-top:20px;">Chúng tôi rất hân hạnh lắng nghe ý kiến từ quý khách!</h3>
            <div class="well well-sm" style="padding: 9px; border-radius: 3px; margin-bottom: 20px;background-color: #f5f5f5;border: 1px solid #e3e3e3;">
                @using (Html.BeginForm())
            {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <fieldset>
                        <legend class="text-center header">Bạn có thể giúp chúng tôi như thế nào?</legend>
                        <div class="form-group">
                            <span class="col-md-1 offset-md-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Ten, new { @class = "form-control", placeHolder = "Ten" })

                                @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 offset-md-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Ho, new { @class = "form-control", placeHolder = "Ho" })
                                @Html.ValidationMessageFor(model => model.Ho, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 offset-md-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.Email, new
                                                {
                                                    @class = "form-control",
                                                    placeHolder = "Example@gmail.com"
                                                })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 offset-md-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.DienThoai, new { @class = "form-control", placeHolder = "Dien Thoai" })
                                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 offset-md-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                                @Html.TextAreaFor(model => model.NoiDung, new { @class = "form-control", @rows = "7", @placeholder = "Nhập tin nhắn bạn ở đây. Chúng tôi sẽ cố gắng phản hồi trong thời gian sớm nhất!" })
                                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <center><button type="submit" class="btn btn-outline-primary">Gửi</button></center>

                            </div>
                        </div>

                    </fieldset>
            }
            </div>
        </div>
